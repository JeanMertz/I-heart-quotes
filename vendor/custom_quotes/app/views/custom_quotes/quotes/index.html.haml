.page-header
  = link_to new_quote_path, :class => 'btn btn-primary' do
    %i.icon-plus.icon-white
    New Quote
  %h1 Listing quotes

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th Quote text
      %th Author
      %th
      %th

  %tbody
    - @quotes.each do |quote|
      %tr
        %td= quote.quote_text
        %td= quote.author
        %td= link_to 'Edit', edit_quote_path(quote)
        %td= link_to 'Destroy', quote, :confirm => 'Are you sure?', :method => :delete
