!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %title I ♥ Kabisa
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}

    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body{ id: controller.controller_name, class: controller.action_name }
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{:data => {:toggle => "collapse", :target => ".nav-collapse"} }
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "I ♥ Kabisa", "#", :class => "brand"
          .nav-collapse
            %ul.nav
              %li.active
                %a{:href => "/"} Quotes
              %li
                %a{:href => "/quote_sources/new"} Add source
              %li
                %a{:href => "/custom_quotes/new"} Add quote
    .container
      - flash.each do |name, msg|
        = content_tag :div, :class => "alert #{name == :error ? "alert-error" : "alert-success" }" do
          %a.close{:href => "#", :data => {:dismiss => "alert"} } ×
          = msg
      = yield
